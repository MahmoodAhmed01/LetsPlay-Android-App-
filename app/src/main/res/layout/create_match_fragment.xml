<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_game_selection"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="18sp" />


    <Spinner
        android:id="@+id/area_selection_spinner"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/primary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/primary_dark"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="MATCH DATE"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5"
            android:background="@color/primary_dark"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="MATCH TIME"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </LinearLayout>

    <EditText
        android:id="@+id/et_challenge_phrase"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:hint="Challenging Phrase..."
        android:inputType="text" />

    <Button
        android:id="@+id/btn_create_match"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:height="48dp"
        android:background="#FFD600"
        android:text="Create"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</LinearLayout>