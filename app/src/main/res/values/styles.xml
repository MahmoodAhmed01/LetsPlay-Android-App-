<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:colorBackground">@color/app_background</item>

        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="LinearProgress" parent="AppTheme">
        <item name="colorAccent">@color/linear_progress_color</item>
        <item name="backgroundTint">@color/linear_progress_background_color</item>
    </style>

</resources>
